

/*! Drawer */

drawer($theme)
  background: $theme.paper
  color: $theme.text
  $scroll-bar-color($theme)

  &-tile:hover
    background: rgba($theme.text, $hover-opacity)


theme(drawer, "drawer")

.fika-app
  .fika-drawer
    position fixed
    left -320px
    top 0
    height 100vh
    width 320px
    $padding(a, 2)
    sans-serif()
    fast-transition()
    $z-index(menu)
    overflow-y auto
    $scroll-bar()
    @media print
      display none

    &-on
      left:0

    &-content
      overflow hidden

      &-wrap
        display flex
        transition: fast-transition()

        > *
          width 100%
          min-width 100%
          $margin(r, 2)
          $padding(a, 1)