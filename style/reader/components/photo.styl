/*! Photo */

.fika-app
  .fika-photo-bg
    position fixed
    width 100%
    height 100%
    pointer-events none
    opacity: 0
    short-transition()
    background #000

    img
      opacity 0.84
      width 100%
      height 100%
      object-fit cover


// adjust color when photo bg is turned on
.fika-app.fika-photo-bg-on
  .fika-photo-bg
    opacity 1
  .fika-toc-static
    a
      color: #fff
      opacity 1 !important
  .fika-footer
    color: #fff
