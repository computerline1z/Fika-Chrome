@import "../variables.styl"
/*! App */

app($theme)
  background: $theme.bg


for $name, $theme in $themes
  .fika-app.theme-{$name}
      app($theme)

.fika-app
  display: flex
  min-height: 100vh
  line-height 1
  font-size 14px
  san-serif()
  drawer-transition()



.fika-reader-mode
  position: fixed
  left:0
  top:0
  width:100%
  height:100%
  background-color:#fff
  overflow-y:auto
  z-index: 2147483647