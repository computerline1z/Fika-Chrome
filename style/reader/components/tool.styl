@import '../variables.styl'

/*! Tool Menu */

f-tool($theme)
  background: tint($theme.text, 20%)
  color: $theme.paper

theme(f-tool, 'f-tool')

.f-tool
  position: fixed
  right: -196px
  top: 24px
  height: 48px
  width: 240px
  padding: 6px 8px
  radius(24px)
  box-shadow 0 2px 12px 0 rgba(0,0,0,.24)
  short-transition()
  cursor pointer
  z-index 50
  @media print
    display none

  &-on
    transform translateX(-160px)

    #tool-btn
      transform rotate(180deg)


#fullscreen
  svg
    &:first-child
      display none

    &:nth-child(2)
      display block

  &.fs-on svg
    &:first-child
      display block

    &:nth-child(2)
      display none


//menu
f-menu($theme)
  background: $theme.paper
  color: $theme.text

theme(f-menu, "f-menu")

.f-menu
  $padding(a, 2)
  position: absolute
  top: 48px;
  left: -92px;
  z-index: 200
  radius()
  shadow(2)
  transform scale(0.9)
  transform-origin top right
  opacity 0
  transition: 0.2s $transition.fast-in-fast-out
  pointer-events none

  &-on
    transform scale(1)
    opacity 1
    pointer-events auto