@import "../variables.styl"

/*! Footer */

footer($theme)
  &-logo
    color: rgba($theme.text, 0.5);

  &-share
    color: rgba($theme.text, 0.5);

theme(footer, "footer")


.fika-footer
  display: flex;
  justify-content: space-between;

  a
    color currentColor
    text-decoration none

  &-logo
    display flex
    align-items center

    img
      $margin(r, 2)
      height 36px
      width 36px

  &-share
    display flex
    align-items center
    color currentColor
    text-decoration none
    @media print
      display none
      