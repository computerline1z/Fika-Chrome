@import '../variables.styl'

$heading($base)
  $rank = 1.5 1.25 1.1 1 0.9 0.83
  for $i in (1..6)
    h{$i}
      font-size: round($base*$rank[$i - 1])
      line-height: 1.3;

  p
  li
  pre
  code
  table
  blockquote
    font-size: $base

.fika-app
  .size-small
    &.fika-article
      $margin(y, 7)
      max-width 640px
    .fika-title
      font-size:32px
    .fika-content
      $heading(17px)
      font-size: 17px


  .size-medium
    &.fika-article
      $margin(y, 6)
      max-width: 720px
    .fika-title
      font-size:40px
    .fika-content
      $heading(21px)
      font-size: 21px

  .size-large
    &.fika-article
      $margin(y, 6)
      max-width: 720px
    .fika-title
      font-size:48px
    .fika-content
      $heading(26px)
      font-size: 26px