@import '../variables.styl'

$heading($base)
  $rank = 1.5 1.25 1.1 1 0.9 0.83
  for $i in (1..6)
    h{$i}
      font-size: round($base*$rank[$i - 1])
      line-height: 1.3;


.size-small
  &.f-article
    $margin(y, 7)
    max-width 640px
  .f-title
    font-size:32px
  .f-content
    $heading(17px)
    font-size: 17px


.size-medium
  &.f-article
    $margin(y, 6)
    max-width: 720px
  .f-title
    font-size:40px
  .f-content
    $heading(21px)
    font-size: 21px

.size-large
  &.f-article
    $margin(y, 6)
    max-width: 720px
  .f-title
    font-size:48px
  .f-content
    $heading(26px)
    font-size: 26px